{
  "name": "dungeon-api",
  "version": "1.0.0",
  "description": "API for D&D Characer Management",
  "main": "build/server.js",
  "repository": "https://github.com/mrkutly/dungeon-api",
  "author": "mark sauer-utley <mark.utley.713@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "db:create": "docker exec -it dungeondbdev psql -U postgres -c \"create database dungeondbdev\"",
    "db:drop": "docker exec -it dungeondbdev psql -U postgres -c \"drop database dungeondbdev\"",
    "db:start": "docker-compose up -d",
    "db:sync": "npx tsc && npx typeorm schema:sync",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "start": "node dist/server.js",
    "postinstall": "npx tsc"
  },
  "dependencies": {
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/node": "^13.1.1",
    "@types/pg": "^7.14.0",
    "@types/swagger-ui-express": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^7.16.1",
    "pm2": "^4.2.1",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.2",
    "tsc-watch": "^4.0.0",
    "typeorm": "^0.2.22",
    "typescript": "^3.7.4",
    "winston": "^3.2.1"
  }
}